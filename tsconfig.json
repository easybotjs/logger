{
	"compilerOptions": {
		"declaration": true,
		"rootDir": "./src",
		"outDir": "dist",

		"lib": ["es2021", "DOM"],
		"module": "ES6",
		"target": "es2021",

		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts"],
}